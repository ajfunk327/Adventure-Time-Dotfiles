# Visual

# Set inner/outer gaps
gaps inner 10
gaps outer 0
gaps top 0
gaps bottom 40

border_radius 8

exec_always --no-startup-id compton --config ~/.config/i3/compton.conf

#interactive screenshot by pressing printscreen
bindsym Control+Print exec gnome-screenshot -i

